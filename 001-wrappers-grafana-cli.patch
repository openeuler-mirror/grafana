@@ -24,6 +25,7 @@ if [ ! -x $EXECUTABLE ]; then
 fi
 
 # overwrite settings from default file
+#shellcheck disable=SC1090
 if [ -f "$DEFAULT" ]; then
   . "$DEFAULT"
 fi
@@ -36,4 +38,13 @@ OPTS="--homepath=${GRAFANA_HOME} \
